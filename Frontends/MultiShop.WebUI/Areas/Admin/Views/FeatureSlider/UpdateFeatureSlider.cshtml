@model UpdateFeatureSliderDto
@{
    ViewData["Title"] = "UpdateFeatureSlider";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Öne Çıkan Görsel Güncelleme Alanı</h4>
                <p>Görsel ile ilgili güncelleme işlemlerinizi aşağıdaki panel üzerinden gerçekleştirebilirsiniz.</p>
                <div class="bs-example" data-example-id="bordered-table">
                    <form method="post">
                        <input type="hidden" asp-for="FeatureSliderID" />
                        <label>Görsel Başlığı</label>
                        <input type="text" class="form-control" asp-for="Title" />
                        <br />
                        <label>Görsel Linki</label>
                        <input type="text" class="form-control" asp-for="ImageUrl" />
                        <br />
                        <label>Görsel Açıklaması</label>
                        <textarea rows="5" sytle="resize:none" type="text" class="form-control" asp-for="Description"></textarea>
                        <br />
                        <button class="btn btn-primary">Görseli Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

