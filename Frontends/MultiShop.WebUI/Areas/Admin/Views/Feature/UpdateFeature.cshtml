@model UpdateFeatureDto
@{
    ViewData["Title"] = "UpdateFeature";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Öne Çıkan Alan Güncelleme Alanı</h4>
                <p>Öne çıkan alanlar ile ilgili güncelleme işlemlerinizi aşağıdaki panel üzerinden gerçekleştirebilirsiniz.</p>
                <div class="bs-example" data-example-id="bordered-table">
                    <form method="post">
                        <input type="hidden" asp-for="FeatureID" />
                        <label>Başlık Adı</label>
                        <input type="text" class="form-control" asp-for="Title" />
                        <br />
                        <label>Başlık Iconu</label>
                        <input type="text" class="form-control" asp-for="IconUrl" />
                        <br />
                        <button class="btn btn-primary">Öne Çıkan Alan Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>