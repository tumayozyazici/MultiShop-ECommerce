@model List<ResultOfferDiscountDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>İndirim Teklifleri Listesi</h4>
                <p>İndirim teklifleri ile ilgili işlemlerinizi aşağıdaki tablo üzerinden gerçekleştirebilirsiniz. Önemli not!! Burada tam olarak 4 adet veri olmalı.</p>
                <div class="bs-example" data-example-id="bordered-table">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>İndirim Başlığı</th>
                                <th>İndirim Altbaşlığı</th>
                                <th>Görsel Linki</th>
                                <th>Buton Yazısı</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@item.Title</td>
                                    <td>@item.SubTitle</td>
                                    <td>@item.ImageUrl</td>
                                    <td>@item.ButtonTitle</td>
                                    <td><a href="/Admin/OfferDiscount/DeleteOfferDiscount/@item.OfferDiscountID" class="btn btn-danger">Sil</a></td>
                                    <td><a href="/Admin/OfferDiscount/UpdateOfferDiscount/@item.OfferDiscountID" class="btn btn-primary">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Admin/OfferDiscount/CreateOfferDiscount" style="margin-top:10px" class="btn btn-success">İndirim Teklifi Ekle</a>
                    @if (Model.Count < 1)
                    {
                        <span>İndirim teklifiniz bulunmuyor.</span>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

